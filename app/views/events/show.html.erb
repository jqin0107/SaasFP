<h2>Details about <em><%= @event.title %></em></h2>

<ul id="details">
  <li>
    Tags:
    <%= @event.tag %>
  </li>
  <li>
    Location:
    <%= @event.location %>
  </li>
  <li>
    Date:
    <%= @event.date %>
  </li>
  <li>
    Description: <to be filled>
  </li>

</ul>


<div class="row">

  <%= link_to 'Edit', edit_event_path(@event), :class => 'btn btn-primary col-2' %>
  <%= link_to 'Delete', event_path(@event), 'data-method' => 'delete', 'data-confirm' => 'Delete this event?', :class => 'btn btn-danger col-2' %>
  
  <%= link_to 'Back to events list', events_path, :class => 'btn btn-primary col-2' %>
</div>
