<h2>Create New Event</h2>

<%= form_tag events_path, :class => 'form' do %>
  <%= label :event, :title, 'Title', :class => 'col-form-label' %>
  <%= text_field :event, :title, :class => 'form-control' %>

  <%= label :event, :tag, 'Tag', :class => 'col-form-label'  %>
  <%= select :event, :tag, ['Computer Science', 'Speech', 'Business', 'Career Fair', 'Others'], {}, {:class => 'form-control col-1'} %>

  <%= label :event, :location, 'Location', :class => 'col-form-label' %>
  <%= text_field :event, :location, :class => 'form-control' %>

  <%= label :event, :date, 'Date', :class => 'col-form-label'  %>
  <%= date_select :event, :date, {}, :class => 'form-control col-2 d-inline' %>
  <br/>
  <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', events_path, :class => 'btn btn-secondary' %>
<% end %>
